{
  "name": "lexa-lsp",
  "displayName": "lexa-lsp",
  "description": "this is an extension for lexa on vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
        {
            "command": "lexa-lsp.setBinaryPath",
            "title": "Set Binary Path"
        },
        {
            "command": "lexa-lsp.checkBinaryPath",
            "title": "Check Binary Path"
        },
        {
            "command": "lexa-lsp.compileFile",
            "title": "Compile File"
        }
    ]
},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
